<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true"
    tools:context=".DetailsCarActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_details"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="TODO"
            android:src="@drawable/back"
            tools:ignore="ContentDescription,HardcodedText" />


        <TextView
            android:id="@+id/car_name_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_details"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/car_name"
            android:textColor="@color/text_color"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_name_details"
            android:layout_marginStart="20dp"
            android:text="or similar"
            android:textColor="@color/text_color_hint" />

        <ImageView
            android:id="@+id/car_img_details"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_below="@+id/car_name_details"
            android:layout_centerHorizontal="true"
            android:src="@drawable/kia_cerato" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_details_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_img_details"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/background_second_color"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/background_second_color">

                <ImageView
                    android:id="@+id/seat_img_details"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/car_seat" />

                <TextView
                    android:id="@+id/seats_number_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/seat_img_details"
                    android:text="0"
                    android:textColor="@color/text_color_hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/seats_number_details"
                    android:text="@string/seats"
                    android:textColor="@color/text_color_hint" />

                <ImageView
                    android:id="@+id/door_img_details"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/seats_number_details"
                    android:src="@drawable/door" />

                <TextView
                    android:id="@+id/doors_number_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/door_img_details"
                    android:text="0"
                    android:textColor="@color/text_color_hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/doors_number_details"
                    android:text="@string/doors"
                    android:textColor="@color/text_color_hint" />

                <ImageView
                    android:id="@+id/suitcase_img_details"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/door_img_details"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/suitcase"
                    android:textColor="@color/text_color_hint" />

                <TextView
                    android:id="@+id/suitcase_number_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doors_number_details"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/suitcase_img_details"
                    android:text="0"
                    android:textColor="@color/text_color_hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doors_number_details"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/suitcase_number_details"
                    android:text="@string/bags"
                    android:textColor="@color/text_color_hint" />

                <ImageView
                    android:id="@+id/gear_shift_img_details"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/door_img_details"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/suitcase_number_details"
                    android:src="@drawable/gearshift" />

                <TextView
                    android:id="@+id/gear_shift_txt_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doors_number_details"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/gear_shift_img_details"
                    android:text="0"
                    android:textColor="@color/text_color_hint" />

                <TextView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/door_img_details"
                    android:layout_marginTop="35dp"
                    android:layout_toStartOf="@+id/Expandable_arrow"
                    android:text="@string/more"
                    android:textColor="@color/text_color_hint" />

                <ImageView
                    android:id="@+id/Expandable_arrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/door_img_details"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_arrow_down" />


                <RelativeLayout
                    android:id="@+id/ExpandableView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Expandable_arrow"
                    android:background="@color/background_second_color"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/ac_image_details"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ac" />

                    <TextView
                        android:id="@+id/ac_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/ac_image_details"
                        android:text="A/C"
                        android:textColor="@color/text_color_hint" />

                    <ImageView
                        android:id="@+id/gas_img_details"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="85dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/ac_txt"
                        android:src="@drawable/gas" />

                    <TextView
                        android:id="@+id/gas_txt_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/gas_img_details"
                        android:text="30"
                        android:textColor="@color/text_color_hint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/gas_txt_details"
                        android:text=" Mpgs"
                        android:textColor="@color/text_color_hint" />

                    <ImageView
                        android:id="@+id/radio_img_details"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/ac_image_details"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/music"
                        android:textColorHint="@color/text_color_hint" />

                    <TextView
                        android:id="@+id/radio_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ac_image_details"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/radio_img_details"
                        android:text="Radio/USP"
                        android:textColor="@color/text_color_hint" />

                    <ImageView
                        android:id="@+id/airbag_img_details"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/gas_img_details"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/radio_txt"
                        android:src="@drawable/airbag" />

                    <TextView
                        android:id="@+id/airbag_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gas_img_details"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/airbag_img_details"
                        android:text="Airbag"
                        android:textColor="@color/text_color_hint" />

                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_details_car"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/background_second_color"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_second_color">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pickup_location" />

                <TextView
                    android:id="@+id/pickup_location"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="80dp"
                    android:text="@string/pick_up_location"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/address"
                    android:textColor="@color/text_color_hint" />

                <ImageView
                    android:id="@+id/pen"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:padding="13dp"
                    android:src="@drawable/pen" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textEncode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_pickup"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/background_second_color"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_second_color">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/return_location" />

                <TextView
                    android:id="@+id/return_location"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="80dp"
                    android:text="@string/return_loctaion"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/address"
                    android:textColor="@color/text_color_hint" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:padding="13dp"
                    android:src="@drawable/pen" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_date_pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_return"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/background_second_color"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_second_color">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/calendar" />


                <TextView
                    android:id="@+id/pickup_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="80dp"
                    android:text="@string/pick_up_date"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:padding="13dp"
                    android:src="@drawable/pen" />

                <TextView
                    android:id="@+id/txt_pickup_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/date"
                    android:textColor="@color/text_color_hint" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_date_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_date_pickup"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/background_second_color"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_second_color">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/calendar" />

                <TextView
                    android:id="@+id/return_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="80dp"
                    android:text="@string/return_date"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_return_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/date"
                    android:textColor="@color/text_color_hint" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:padding="13dp"
                    android:src="@drawable/pen" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_date_return"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/background_second_color"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_second_color">

                <ImageView
                    android:id="@+id/driver_img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/driver" />

                <TextView
                    android:id="@+id/add_driver_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:text="@string/additional_driver"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_driver_txt"
                    android:layout_marginStart="80dp"
                    android:text="@string/_10jd_day"
                    android:textColor="@color/text_color" />

                <CheckBox
                    android:id="@+id/checkbox_driver"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_driver"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/background_second_color"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_second_color">

                <TextView
                    android:id="@+id/promo_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/add_promo_code"
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/promo_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/promo_txt"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/coupon" />

                <EditText
                    android:id="@+id/promo_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/promo_txt"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toStartOf="@+id/enter_promo"
                    android:layout_toEndOf="@+id/promo_img"
                    android:hint="@string/enter_promo_code"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_hint" />

                <ImageView
                    android:id="@+id/enter_promo"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/promo_txt"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/enter" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/promo_code"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/total"
                    android:textColor="@color/text_color"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/car_price_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/promo_code"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:layout_toStartOf="@+id/jd_details"
                    android:text="00:00"
                    android:textColor="#2B982F"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jd_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/promo_code"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/jd"
                    android:textColor="#2B982F"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/make_payment"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/car_price_details"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#2B982F"
                    android:text="@string/make_payment"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>