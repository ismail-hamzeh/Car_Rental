<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_economy"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="8dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="10dp"
    app:strokeColor="@color/background_second_color"
    app:strokeWidth="2dp">


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/background_second_color"
        android:scaleType="centerCrop">

        <TextView
            android:id="@+id/car_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="NAME"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_name"
            android:layout_marginStart="20dp"
            android:text="or similar"
            android:textColor="@color/text_color_hint" />


        <ImageView
            android:id="@+id/car_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/car_name"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/zz" />

        <ImageView
            android:id="@+id/seat_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/car_img"
            android:src="@drawable/car_seat" />

        <TextView
            android:id="@+id/seats_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/seat_img"
            android:text="0"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/seats_number"
            android:text="@string/seats"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/door_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/seats_number"
            android:src="@drawable/door" />

        <TextView
            android:id="@+id/doors_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/door_img"
            android:text="0"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/doors_number"
            android:text="@string/doors"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/suitcase_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/door_img"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/car_img"
            android:src="@drawable/suitcase" />

        <TextView
            android:id="@+id/suitcase_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doors_number"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/suitcase_img"
            android:text="0"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doors_number"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/suitcase_number"
            android:text="@string/bags"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/gear_shift_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/door_img"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/suitcase_number"
            android:src="@drawable/gearshift" />

        <TextView
            android:id="@+id/gear_shift_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doors_number"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/gear_shift_img"
            android:text="0"
            android:textColor="@color/text_color" />


        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/gear_shift_txt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/car_img"
            android:background="@drawable/line" />


        <TextView
            android:id="@+id/car_price"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/car_img"
            android:text="00.0 "
            android:textColor="#2B982F" />

        <TextView
            android:id="@+id/jd"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/car_price"
            android:text="@string/jd_day"
            android:textColor="#2B982F" />

        <Button
            android:id="@+id/continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jd"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#2B982F"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:text="@string/continue_"
            android:textColor="@color/white" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>